<div class="container">
  {% for block in section.blocks %}
    {% render 'svg-list-icon', text: block.settings.text, icon: block.settings.icon, split: block.settings.word_split %}
  {% endfor %}
</div>

{% schema %}
{
  "name": "SVG List",
  "tag": "section",
  "class": "svg-list",
  "max_blocks": 4,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "blocks": [
    {
      "name": "SVG Icon",
      "type": "icon",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        },
        {
          "type" : "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            {
              "value": "no-preservatives",
              "label": "Sans agent de conservation"
            },
            {
              "value": "low-sodium",
              "label": "Faible en sodium"
            },
            {
              "value": "low-fat",
              "label": "Faible en gras"
            },
            {
              "value": "no-sugar",
              "label": "Sans sucre ajout√©"
            }
          ],
          "default": "no-preservatives"
        },
          {
            "type": "number",
            "id": "word_split",
            "label": "Split at word",
            "default": 0
          }
      ]
    }
  ],
  "presets": [
    {
      "name": "SVG List",
      "settings": {
        "title": "List title"
      },
      "blocks": [
        {
          "type": "icon"
        },
        {
          "type": "icon"
        }
      ]
    }
  ]
}
{% endschema %}